---
version: '3.5'

services:
    plex:
        image: lscr.io/linuxserver/plex:latest
        container_name: plex
        restart: unless-stopped
        network_mode: host

        environment:
            - PUID=1000
            - PGID=1000
            - VERSION=docker
            - TZ=America/Detroit
{% if plex_claim_token|default("") %}
            - PLEX_CLAIM="{{ plex_claim_token }}"
{% endif %}

        volumes:
            - "{{ plex_config_folder }}:/config"
            - /media/plexmedia01:/Media
        tmpfs:
            - /transcode:size=1G
        healthcheck:
            test: wget --no-verbose --tries=1 --spider "http://localhost:{{ plex_port }}/identity"
            interval: 30s

    plex-prom-exporter:
        image: docker.io/nathan815/prometheus-plex-exporter
        container_name: plex_prom_exporter
        restart: always
        ports:
            - 8000:9000/tcp
        environment:
            PLEX_SERVER: "http://plex:{{ plex_port }}"
            PLEX_TOKEN: "{{ plex_admin_token }}"

    tautulli:
        image: ghcr.io/tautulli/tautulli
        container_name: plex_tautulli
        restart: unless-stopped
        volumes:
            - "{{ plex_tautulli_folder }}:/config"
        environment:
            - PUID=1000
            - PGID=1000
            - TZ=America/Detroit
        ports:
            - "{{ plex_tautulli_port }}:8181"
