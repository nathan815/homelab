---
services:
    plex:
        image: lscr.io/linuxserver/plex:latest
        container_name: plex
        restart: always
        network_mode: host

        environment:
            - PUID=1000
            - PGID=1000
            - VERSION=docker
            - TZ=America/Detroit
{% if plex_claim_token|default("") %}
            - PLEX_CLAIM="{{ plex_claim_token }}"
{% endif %}

        volumes:
            - "{{ plex_config_folder }}:/config"
            - /media/plexmedia01:/Media
        tmpfs:
            - /transcode:size=1G
        healthcheck:
            test: wget --no-verbose --tries=1 --spider "http://localhost:{{ plex_port }}/identity"
            interval: 30s

    tautulli:
        image: ghcr.io/tautulli/tautulli
        container_name: plex-tautulli
        restart: always
        volumes:
            - "{{ plex_tautulli_folder }}:/config"
        environment:
            - PUID=1000
            - PGID=1000
            - TZ=America/Detroit
        ports:
            - "{{ plex_tautulli_port }}:8181"

    overseerr:
        image: lscr.io/linuxserver/overseerr:latest
        container_name: plex-overseerr
        restart: always
        environment:
            - PUID=1000
            - PGID=1000
            - TZ=America/Detroit
        volumes:
            - "{{ plex_overseerr_folder }}:/config"
        ports:
            - "{{ plex_overseerr_port }}:5055"

    wizarr:
        image: ghcr.io/wizarrrr/wizarr:latest
        container_name: plex-wizarr
        volumes:
            - "{{ plex_wizarr_db_folder }}:/data/database"
        ports:
            - "{{ plex_wizarr_port }}:5690"

    prowlarr:
        image: lscr.io/linuxserver/prowlarr:latest
        container_name: prowlarr
        restart: always
        environment:
            - PUID=1000
            - PGID=1000
            - TZ=America/Detroit
        volumes:
            - "{{ prowlarr_data_folder }}:/config"
        ports:
            - "{{ prowlarr_port }}:9696"

    radarr:
        image: lscr.io/linuxserver/radarr:latest
        container_name: radarr
        restart: always
        environment:
            - PUID=1000
            - PGID=1000
            - TZ=America/Detroit
        volumes:
            - "{{ radarr_data_folder }}:/config"
            - "/media/plexmedia01:/media01"
        ports:
            - "{{ radarr_port }}:7878"

    sonarr:
        image: lscr.io/linuxserver/sonarr:latest
        container_name: sonarr
        restart: always
        environment:
            - PUID=1000
            - PGID=1000
            - TZ=America/Detroit
        volumes:
            - "{{ sonarr_data_folder }}:/config"
            - "/media/plexmedia01:/media01"
        ports:
            - "{{ sonarr_port }}:8989"

    bazarr:
        image: lscr.io/linuxserver/bazarr:latest
        container_name: bazarr
        restart: always
        environment:
            - PUID=1000
            - PGID=1000
            - TZ=America/Detroit
        volumes:
            - "{{ bazarr_data_folder }}:/config"
            - "/media/plexmedia01:/media01"
        ports:
            - "{{ bazarr_port }}:6767"

    samba:
        image: docker.io/servercontainers/samba:latest
        container_name: plex-samba
        restart: always
        environment:
            ACCOUNT_admin: admin123
            UID_admin: 1234
            #SAMBA_VOLUME_CONFIG_plex_flashdrive: "[plex_flashdrive]; path=/shares/plex_flashdrive; available = yes; browsable = yes; writable = yes; read only = no; force user = admin; public = yes; guest ok = yes"
            SAMBA_VOLUME_CONFIG_plexmedia01: "[plexmedia01]; path=/shares/plexmedia01; available = yes; browsable = yes; writable = yes; read only = no; force user = admin; public = no; guest ok = no"
        volumes:
            # - /media/usbdriveplex:/shares/plex_flashdrive
            - /media/plexmedia01:/shares/plexmedia01
        ports:
            - 445:445
        cap_add:
            - CAP_NET_ADMIN

    filebrowser:
        container_name: plex-filebrowser
        image: "filebrowser/filebrowser:s6"
        restart: always
        volumes:
            - "/media:/files"
            - "{{ plex_filebrowser_folder }}/filebrowser.db:/database/filebrowser.db"
            - "{{ plex_filebrowser_config_file }}:/config/settings.json"
        environment:
            - PUID=1000
            - PGID=1000
        ports:
            - "{{ plex_filebrowser_port }}:80"
